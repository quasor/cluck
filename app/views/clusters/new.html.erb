<h1>New cluster</h1>

<% form_for(@cluster) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %> <span class="help">(e.g. US Odds )</span><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :cluster %> <span class="help">(e.g. US, Canada, UK)</span><br />
    <%= f.text_field :group_list %>
  </p>

  <p>
    <%= f.label :region %> <span class="help">(e.g. ENA, APAC)</span><br />
    <%= f.text_field :region_list %>
  </p>
  <p>
    <%= f.label :type %> <span class="help">(e.g. Web, TS)</span><br />
    <%= f.text_field :type_list %>
  </p>
  <p>
    <%= f.label :release_id %><br />
    <%= f.collection_select :release_id, Release.find(:all), :id, :name, {:prompt => :true} %>
  </p>


  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', clusters_path %>
