<h1>Editing cluster</h1>

<% form_for(@cluster) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :state_id %><br />
    <%= f.collection_select :state_id, State.find(:all), :id, :name %>
  </p>

 <!--
  <p>
    <%= f.label :release_id %><br />
    <%= f.text_field :release_id %>
  </p>
-->
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @cluster %> |
<%= link_to 'Back', clusters_path %>
