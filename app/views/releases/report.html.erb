<h1><%=@release.name%> Report</h1>
<style>
.report th { color:white; background-color:black;padding:8px;}
.report td { border:solid 1px #DDD; padding:0px 8px 0px 8px;}
</style>
<table class="report" cellspacing="0">
  <tr>
    <th>Cluster</th>
    <th>Team</th>
    <th>Before</th>
	<th>After</th>
    <th>Signed off</th>
    <th>At</th>
    <th>By</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.cluster.name %></td>
    <td><%=event.team_assignment.nil? ? "Admin" : event.team_assignment.team.name %></td>
    <td><%=h event.state.name %></td>
    <td><%=h event.action %></td>
    <td><%=h event.signed_off %></td>
    <td nowrap><%=h event.updated_at.to_s(:db)  %></td>
    <td><%=h event.updated_by %></td>
  </tr>

  <% end %>
</table>

<br />

