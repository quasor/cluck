<h1>Listing notes</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Created by</th>
    <th>Notable type</th>
    <th>Notable</th>
  </tr>

<% for note in @notes %>
  <tr>
    <td><%=h note.body %></td>
    <td><%=h note.created_by %></td>
    <td><%=h note.notable_type %></td>
    <td><%=h note.notable_id %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

